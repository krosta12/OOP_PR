<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.ooppr.ui.controllers.SaveAsDialogController" style="-fx-padding: 10;">
    <ImageView fx:id="previewImageView" fitWidth="300" preserveRatio="true" />
    <TextField fx:id="pathTextField" promptText="File path" />
    <HBox spacing="10" alignment="center_right">
        <Button text="Save" onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>